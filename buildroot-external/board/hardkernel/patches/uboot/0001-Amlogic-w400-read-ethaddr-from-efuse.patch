Subject: [PATCH 1/1] Amlogic w400: read ethaddr from efuse.

Signed-off-by: Pascal Vizeli <pvizeli@syshack.ch>
---
 board/amlogic/w400/w400.c | 21 ++++++++++++++++++++-
 1 file changed, 20 insertions(+), 1 deletion(-)

diff --git a/board/amlogic/w400/w400.c b/board/amlogic/w400/w400.c
index e60dc3a622..a8d013cbab 100644
--- a/board/amlogic/w400/w400.c
+++ b/board/amlogic/w400/w400.c
@@ -6,13 +6,32 @@
 
 #include <common.h>
 #include <dm.h>
-#include <env_internal.h>
+#include <env.h>
 #include <asm/io.h>
+#include <asm/arch/sm.h>
 #include <asm/arch/eth.h>
 
+#define EFUSE_MAC_OFFSET	22
+#define EFUSE_MAC_SIZE		12
+
 int misc_init_r(void)
 {
+	u8 mac_addr[6];
+	char efuse_mac_addr[EFUSE_MAC_SIZE];
+	ssize_t len;
+
 	meson_eth_init(PHY_INTERFACE_MODE_RGMII, 0);
 
+	if (!eth_env_get_enetaddr("ethaddr", mac_addr)) {
+		len = meson_sm_read_efuse(EFUSE_MAC_OFFSET,
+					  efuse_mac_addr, EFUSE_MAC_SIZE);
+		if (len == EFUSE_MAC_SIZE)
+			return 0; 
+
+		string_to_enetaddr(efuse_mac_addr, mac_addr);
+		if(is_valid_ethaddr(mac_addr))
+			eth_env_set_enetaddr("ethaddr", mac_addr);
+	}
+
 	return 0;
 }
